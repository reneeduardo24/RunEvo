<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oscuro"
    tools:context=".RecoveryPassActivity">

    <ImageView
        android:id="@+id/btnBackRecP"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/regresar"
        />

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hola!"
        android:fontFamily="@font/alt_sweat_font"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtContraseña"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:background="@drawable/bordes_redondos"
        android:hint="Nueva contraseña"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:drawableEnd="@drawable/toggle_visibility"
        android:paddingEnd="20dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtConfirmar"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:background="@drawable/bordes_redondos"
        android:hint="Repetir contraseña"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRestablecer"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:textColor="@color/gris"
        android:textSize="16sp"
        android:text="@string/btn_restablecer"
        android:background="@drawable/boton_redondo_verde"
        android:fontFamily="@font/alt_sweat_font"
        app:backgroundTint="@null"
        />

</LinearLayout>