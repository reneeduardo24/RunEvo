<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrarseActivity"
    android:orientation="vertical"
    android:background="@color/oscuro">

    <ImageButton
        android:id="@+id/btnBackCreateA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_arrow_back_42"
        android:background="@color/oscuro"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_letras"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bordes_redondos"
        android:textColor="@color/gris"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:textColorHint="@color/gris"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/ic_user_24"
        android:paddingEnd="20dp"/>

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bordes_redondos"
        android:textColor="@color/gris"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:textColorHint="@color/gris"
        android:hint="Correo electronico"
        android:inputType="textEmailAddress"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:paddingEnd="20dp"/>

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bordes_redondos"
        android:textColor="@color/gris"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:textColorHint="@color/gris"
        android:hint="Contrasena"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/toggle_visibility"
        android:paddingEnd="20dp"/>

    <EditText
        android:id="@+id/txtContrasena2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bordes_redondos"
        android:textColor="@color/gris"
        android:paddingStart="30dp"
        android:fontFamily="@font/alt_sweat_font"
        android:textColorHint="@color/gris"
        android:layout_gravity="center"
        android:hint="Confirme contrasena"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textAllCaps="false"
        android:textColor="@color/gris"
        android:textSize="16sp"
        android:text="@string/btn_registrarse"
        android:background="@drawable/boton_redondo_verde"
        android:fontFamily="@font/alt_sweat_font"
        app:backgroundTint="@null"
        />

</LinearLayout>